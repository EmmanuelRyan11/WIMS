<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WIMS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <!-- Untuk tab. -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Untuk yang paling atas (bagian jam/waktu). -->
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!-- Contoh: untuk FAB di bagian bawah. -->
        <item name="colorSecondary">@color/primary</item>
        <!-- Yang ini blm tau utk apa -->
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WIMS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WIMS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WIMS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>